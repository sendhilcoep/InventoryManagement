<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

          <hibernate-mapping>
          <class name="authentication.model.User" table="usertest2">
          <id name="id" column="id" type="int">
          <generator class="increment"></generator>
          </id>
          
          <property name="username" column="username" type="string" unique="true"></property>
          <property name="password" column="password" type="string"></property>
          <property name="privilege" column="privilege" type="int"></property>
          <property name="employeeId" column="employeeId" type="int"></property>
    
          </class>
          
          </hibernate-mapping>